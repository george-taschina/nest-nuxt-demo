{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "noEmit": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "importHelpers": true
  },
  "exclude": ["node_modules"]
}
