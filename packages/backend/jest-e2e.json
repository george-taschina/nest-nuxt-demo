{
  "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".e2e-spec.ts$",
    "workerIdleMemoryLimit": "800MB",
    "collectCoverageFrom": ["**/*.(t/s)s", "**/*fixture*"],
    "coveragePathIgnorePatterns": [
        "<rootDir>/apps/",
        "test",
        "tests"
    ],
    "coverageDirectory": "../../coverage",
    "coverageReporters": [
        "html", "text", "text-summary", "cobertura"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
        "@has-george-read-backend/core/(.*)": "<rootDir>/libs/core/src/$1",
        "@has-george-read-backend/core": "<rootDir>/libs/core/src",
        "@has-george-read-backend/tour/(.*)": "<rootDir>/libs/tour/src/$1",
        "@has-george-read-backend/tour": "<rootDir>/libs/tour/src"
    },
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
        "dotenv/config","jest-extended/all","@relmify/jest-fp-ts"
    ]
}
