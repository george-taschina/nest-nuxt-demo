{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@nest-nuxt-demo-backend/tour": ["libs/tour/src"],
      "@nest-nuxt-demo-backend/tour/*": ["libs/tour/src/*"],
      "@nest-nuxt-demo-backend/core": ["libs/core/src"],
      "@nest-nuxt-demo-backend/core/*": ["libs/core/src/*"]
    }
  }
}
