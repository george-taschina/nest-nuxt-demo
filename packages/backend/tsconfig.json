{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@has-george-read-backend/book": ["libs/book/src"],
      "@has-george-read-backend/book/*": ["libs/book/src/*"],
      "@has-george-read-backend/core": ["libs/core/src"],
      "@has-george-read-backend/core/*": ["libs/core/src/*"]
    }
  }
}
